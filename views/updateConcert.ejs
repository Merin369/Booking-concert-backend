<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Concert</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <style>
        /* Background Image */
        body {
            background: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQqFBcxaV7O-AwLmPgGMslake7qYJYyPZk-9A&s') no-repeat center center/cover;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            animation: fadeIn 1.2s ease-in-out;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Transparent Form */
        .form-container {
            background: rgba(255, 255, 255, 0.15); /* Transparent White */
            backdrop-filter: blur(10px); /* Blur Effect */
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 500px;
            animation: slideUp 1s ease-in-out;
            color: white;
        }

        @keyframes slideUp {
            from { transform: translateY(20px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #ffffff;
            text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3);
        }

        label {
            font-weight: 600;
        }

        input {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: white;
        }

        input:focus {
            border-color: #ffffff !important;
            box-shadow: 0 0 8px rgba(255, 255, 255, 0.6) !important;
            background: rgba(255, 255, 255, 0.3);
        }

        .btn-update {
            background: rgba(255, 255, 255, 0.3);
            border: none;
            padding: 12px;
            width: 100%;
            transition: all 0.3s ease-in-out;
            color: white;
            font-weight: bold;
        }

        .btn-update:hover {
            background: rgba(255, 255, 255, 0.5);
            transform: scale(1.05);
        }
    </style>
</head>
<body>

    <div class="form-container">
        <h2>Edit Concert</h2>
        <form action="/concerts/<%= concert._id %>/update" method="POST">
            <div class="mb-3">
                <label class="form-label">Name:</label>
                <input type="text" class="form-control" name="name" value="<%= concert.name %>" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Location:</label>
                <input type="text" class="form-control" name="location" value="<%= concert.location %>" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Price:</label>
                <input type="number" class="form-control" name="price" value="<%= concert.price %>" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Date:</label>
                <input type="date" class="form-control" name="date" value="<%= concert.date.toISOString().split('T')[0] %>" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Venue:</label>
                <input type="text" class="form-control" name="venue" value="<%= concert.venue %>" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Time:</label>
                <input type="time" class="form-control" name="time" value="<%= concert.time %>" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Available Tickets:</label>
                <input type="number" class="form-control" name="availableTickets" value="<%= concert.availableTickets %>" required>
            </div>

            <button type="submit" class="btn btn-update">Update Concert</button>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
